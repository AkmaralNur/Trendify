<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Toolbar Include -->
    <include layout="@layout/mytoolbar" />

    <!-- User Name Section -->
    <LinearLayout
        android:id="@+id/ll_userName"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Имя пользователя"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Введите имя"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Password Section -->
    <LinearLayout
        android:id="@+id/ll_password"
        android:layout_below="@id/ll_userName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Пароль"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Введите пароль"
            android:padding="10dp"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Nickname Section -->
    <LinearLayout
        android:id="@+id/ll_nickName"
        android:layout_below="@id/ll_password"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Никнейм"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_nickName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Введите никнейм"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Phone Number Section -->
    <LinearLayout
        android:id="@+id/ll_phoneNumb"
        android:layout_below="@id/ll_nickName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Номер телефона"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_phoneNumb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Введите номер"
            android:padding="10dp"
            android:textSize="16sp"
            android:inputType="phone"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- School Name Section -->
    <LinearLayout
        android:id="@+id/ll_schoolName"
        android:layout_below="@id/ll_phoneNumb"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Пол"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_schoolName"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Введите пол"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Apartment Number Section -->
    <LinearLayout
        android:id="@+id/ll_apartmentNumb"
        android:layout_below="@id/ll_schoolName"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="Возраст"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingEnd="10dp" />

        <EditText
            android:id="@+id/et_apartmentNumb"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:hint="Введите возраст"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Register Button -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/btn_cancle"
        android:layout_marginBottom="20dp"
        android:width="160dp"
        android:text="Зарегистрироваться"
        android:backgroundTint="@color/ocean"
        android:textColor="@color/white" />

    <!-- Cancel Button -->
    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:width="160dp"
        android:text="Отмена"
        android:backgroundTint="@color/ocean"
        android:textColor="@color/white" />
</RelativeLayout>
